@using System.Text.RegularExpressions
@model Entities.Dtos.ArticleListDto
@{
    ViewBag.Title = "Anasayfa";
    Layout = "_Layout";
    Regex regex = new Regex("<[^>]*>");
}

<div class="col-md-8">

    <h1 class="my-4">
        Son Paylaşılan Makaleler
    </h1>

    @foreach (var article in Model.Articles)
{
    <!-- Blog Post -->
    <div class="card mb-4">
        <img class="card-img-top" src="~/img/@article.Thumbnail" alt="@article.Title">
        <div class="card-body">
            <h2 class="card-title">@article.Title</h2>
            <p class="card-text">
                @{
                    article.Content = regex.Replace(article.Content, "");
                }
                @(article.Content.Length>150 ? article.Content.Substring(0,250) : article.Content)
            </p>
            <a asp-controller="Article" asp-action="Detail" class="btn btn-primary"> Daha fazla oku &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            @article.User.UserName tarafından @article.Date tarihinde paylaşıldı.
        </div>
    </div>
}

    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Eski</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Yeni &rarr;</a>
        </li>
    </ul>

</div>