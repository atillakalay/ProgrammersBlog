@model Entities.Dtos.ArticleDto
@{ Layout = "_ArticleLayout ";
    ViewBag.Title = "Article.Title";
    ViewBag.Description = Model.Article.SeoDescription;
    ViewBag.Author = Model.Article.SeoAuthor;
    ViewBag.Tags = Model.Article.SeoTags; }


<!-- Post Content Column -->
<div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4">@Model.Article.Title</h1>

    <!-- Author -->
    <p class="lead">
        @Model.Article.User.UserName tarafından @Model.Article.Date.ToShortDateString() tarihinde paylaşılmıştır.
    </p>


    <hr>

    <!-- Preview Image -->
    <div class="text-center">
        <img class="img-fluid rounded" src="~/img/@Model.Article.Thumbnail" alt="@Model.Article.Title">
    </div>
    <hr>

    <!-- Post Content -->
    @Html.Raw(@Model.Article.Content)

    <hr>
    
    <p class="text-center">Okunma Sayısı :<span class="badge badge-info">@Model.Article.ViewsCount</span> Yorum Sayısı: <span class="badge badge-danger">@Model.Article.CommentCount</span></p>
    <!-- Comments Form -->
    <div class="card my-4">
        <h5 class="card-header">Bir yorum ekle:</h5>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <textarea class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Ekle</button>
            </form>
        </div>
    </div>

    @foreach (var comment in Model.Article.Comments)
    {<!-- Single Comment -->
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle" src="https://randomuser.me/api/portraits/men/45.jpg" alt="">
                            <div class="media-body">
                                <h5 class="mt-0">@comment.CreatedByName</h5>
                                @comment.Text
                            </div>
                        </div>}
</div>
