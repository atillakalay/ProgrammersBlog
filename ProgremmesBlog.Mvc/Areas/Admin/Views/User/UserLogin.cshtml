@model Entities.Dtos.UserLoginDto

@{ Layout = "_UserLoginLayout";
    ViewBag.Title = "Giriş Yap"; }
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Giriş Yap</h3></div>
                <div class="card-body">
                    <form asp-controller="User" asp-action="Login" method="post">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email">Email</label>
                            <input class="form-control py-4" asp-for="Email" type="email" placeholder="Lütfen emailinizi giriniz."/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password">Password</label>
                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Lütfen şifrenizi giriniz."/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox"/>
                                <label class="custom-control-label" asp-for="RememberMe"></label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" href="password.html">Şifremi Unuttum</a>
                            <button class="btn btn-primary" type="submit">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a>Kayıt Ol</a></div>
                </div>
            </div>
        </div>
    </div>
</div>